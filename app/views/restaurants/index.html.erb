

<div class="container">

    <h1 class="text-center">My list of restaurants</h1>
    <div class="text-center">
      <%= link_to 'create new restaurant', new_restaurant_path, class: "btn btn-info" %>
    </div>



  <div class="row">
    <% @restaurants.each_with_index do |restaurant, i| %>
    <div class="col-xs-12 col-md-6 col-lg-4 text-center">
        <div class="card">
          <div>
            <%= image_tag "#{i + 1}", class: "card-image" %>
          </div>
          <div class="card-title">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>






